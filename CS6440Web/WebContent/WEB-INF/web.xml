<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>CS6440Web</display-name>
  <welcome-file-list>
    <welcome-file>Login.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>PatientInfo</servlet-name>
    <servlet-class>gatech.cs6440.project.PatientInfo</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PatientInfo</servlet-name>
    <url-pattern>/PatientInfo/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>DrugSearch</servlet-name>
    <servlet-class>gatech.cs6440.project.DrugSearch</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DrugSearch</servlet-name>
    <url-pattern>/DrugSearch/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>FillPrescription</servlet-name>
    <servlet-class>gatech.cs6440.project.FillPrescription</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FillPrescription</servlet-name>
    <url-pattern>/FillPrescription/*</url-pattern>
  </servlet-mapping>
  <error-page>
    <error-code>404</error-code>
    <location>/AppExceptionHandler</location>
  </error-page>
  <error-page>
    <exception-type>javax.servlet.ServletException</exception-type>
    <location>/AppExceptionHandler</location>
  </error-page>
  <error-page>
    <exception-type>java.lang.Throwable</exception-type>
    <location>/AppExceptionHandler</location>
  </error-page>
</web-app>